require lxqt

SUMMARY="LXQt PolicyKit agent"

PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build:
        virtual/pkg-config
    build+run:
        lxqt/liblxqt[~${PV}]
        lxqt/libqtxdg
        sys-auth/polkit-qt[qt5(+)]
        x11-libs/qtbase:5[>=5.7.1]
        x11-libs/qttools:5[>=5.7.1]
"

src_prepare() {
    cmake_src_prepare
    edo sed -e '/XdgIcon/d' -i "${CMAKE_SOURCE}"/src/main.cpp
}

